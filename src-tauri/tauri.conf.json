{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Erbium",
  "version": "1.0.0",
  "identifier": "erbium",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["erbium"]
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Erbium Launcher",
        "width": 1100,
        "height": 640,
        "minWidth": 900,
        "minHeight": 590,
        "resizable": true,
        "decorations": false,
        "fullscreen": false,
        "center": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png", "icons/icon.ico"]
  }
}
